	<requires>
		<import addon="xbmc.gui" version="5.3.0"/>
		<import addon="script.artistslideshow" version="1.8.2"/>
		<import addon="script.artwork.downloader" version="12.0.29"/>
		<import addon="script.globalsearch" version="3.0.4"/>
		<import addon="script.grab.fanart" version="0.13.0"/>
		<import addon="script.skinshortcuts" version="0.4.4"/>
		<import addon="script.tv.show.next.aired" version="6.0.12"/>
		<import addon="script.watchlist" version="0.0.2"/>
		<import addon="service.library.data.provider" version="0.0.7"/>
